<!-- HEADER -->
<div style="background: #627a93; padding: 10px 0; text-align: center;">
  <img src="https://i.postimg.cc/Y00m4WLK/UTN-header-blanco.png" alt="UTN" style="max-width: 100%; height: auto;">
  <h2 style="color: #FFFFFF; font-size: 24px; text-transform: uppercase; letter-spacing: 3px;">
    SEC. PLANEAMIENTO: SEGUIMIENTO DE CARRERAS
  </h2>
  <br>
  <p style="color: #FFFFFF; font-size: 40px"><b>[NO RESPONDER]</b><p>
</div>

<!-- CONTENIDO -->
<div style="max-width: 100%; height: auto; text-align: center; background: #7e94a9; padding: 20px 0;">
  <h2 style="color: #FFFFFF;">✅ Cuenta activada con éxito</h2>

  <p style="color: #ffffff; font-size: 16px;">
    <%= l(:notice_account_activated) %>
  </p>

  <p style="margin-top: 15px;">
    <span style="color: #ffffff; font-weight: bold;"><%= l(:label_login) %>:</span>
    <a href="<%= @login_url %>" style="color: #ffffff; font-weight: bold; font-size: 16px;">
      <%= @login_url %>
    </a>
  </p>

  <br>
</div>

