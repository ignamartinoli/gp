<div class="div_section">
  <h3 class="siac_title">Administración de convocatorias</h3>
  <hr>
  <div class="searchBarContainer">
    <label for="">Convocatorias activas</label>
    <div class="searchBarDiv">
      <input type="text" class="searchBar" id="searchBar" placeholder="Buscar convocatorias...">
      <ul id="search-results" style="display: none; list-style-type: none; padding: 0;"></ul>
      <div>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
          <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
        </svg>
      </div>
    </div>
  </div>
  <%= flash[:debug] %>
  <table class="table custom-table">
    <thead>
      <tr>
        <th scope="col">Resolución</th>
        <th scope="col">Nombre</th>
        <th scope="col">Fecha de Inicio</th>
        <th scope="col">Fecha de Fin</th>
        <th scope="col">Titulaciones Afectadas</th>
        <th scope="col">Etapa Actual</th>
        <th scope="col">Acciones</th>
      </tr>
    </thead>
   <tbody>
      <% @convocatoria.each do |convocatoria| %>
        <tr class="<%= 'cerrada' if convocatoria.estado == 'Cerrada' %>">
          <td><%= convocatoria.resolucion %></td>
          <td><%= convocatoria.nombre %></td>
          <td><%= convocatoria.fecha_inicio.strftime('%d/%m/%Y') %></td>
          <td><%= convocatoria.fecha_hasta.strftime('%d/%m/%Y') %></td>
          <td><%= get_nombre_titulacion(convocatoria.titulaciones.to_i) %></td>
          <td><%= convocatoria.etapa %></td>
          <td>
            <div class="action_bar">
              <% if Bookmark.exists?(user_id: User.current.id, convocatorias_id: convocatoria.id) %>
                <%= link_to unbookmark_convocatoria_path(convocatoria.id), method: :get, class: 'tooltip' do %>
                <span class="tooltiptext">Desmarcar convocatoria</span>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bookmark-fill" viewBox="0 0 16 16">
                  <path d="M2 2v13.5a.5.5 0 0 0 .74.439L8 13.069l5.26 2.87A.5.5 0 0 0 14 15.5V2a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2"/>
                </svg>
                <%end%>
              <% else %>
                <%= link_to bookmark_convocatoria_path(convocatoria.id), method: :get, class: 'tooltip' do%>
                <span class="tooltiptext">Marcar convocatoria</span>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bookmark" viewBox="0 0 16 16">
                  <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v13.5a.5.5 0 0 1-.777.416L8 13.101l-5.223 2.815A.5.5 0 0 1 2 15.5zm2-1a1 1 0 0 0-1 1v12.566l4.723-2.482a.5.5 0 0 1 .554 0L13 14.566V2a1 1 0 0 0-1-1z"/>
                </svg>
                <%end%>
              <% end %>
              <%= link_to edit_convocatoria_path(convocatoria.id), class: 'tooltip' do %>
                <span class="tooltiptext">Editar convocatoria</span>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                  <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                  <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"/>
                </svg>
              <% end %>          
              <%= link_to show_convocatoria_path(convocatoria.id), class: 'tooltip' do %>
                <span class="tooltiptext">Ver convocatoria</span>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                  <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8M1.173 8a13 13 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5s3.879 1.168 5.168 2.457A13 13 0 0 1 14.828 8q-.086.13-.195.288c-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5s-3.879-1.168-5.168-2.457A13 13 0 0 1 1.172 8z"/>
                  <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5M4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0"/>
                </svg>
              <% end %>          
              <% if convocatoria.etapa == 'Nueva' %>
                  <%= link_to delete_convocatoria_path(convocatoria.id), method: :delete, data: { confirm: '¿Estás seguro de que quieres eliminar esta convocatoria?' }, class: 'tooltip' do %>
                    <span class="tooltiptext">Eliminar esta convocatoria</span>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                      <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5"/>
                    </svg>
                  <% end %>
                  <% else %>
                    <span class="tooltip">
                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3 disabled" viewBox="0 0 16 16">
                        <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5"/>
                      </svg>
                      <span class="tooltiptext">No se puede eliminar esta convocatoria</span>
                    </span>
                <% end %>
            </div>  
          </td>
        </tr>               
      <% end %>
        <tr class="paginationTr">
            <td colspan=7 >
              <div class="pagination_menu"><%= paginate @convocatoria %></div>
            </td>
        </tr>
    </tbody>
  </table>
  <div class='convocatoria_bottom_menu'>
    <div class="bm_col1">
      <%= form_with url: convocatorias_path, method: :get, local: true do %>
        <label>
          <%= check_box_tag :mostrar_cerradas, 'true', params[:mostrar_cerradas] == 'true', onchange: 'this.form.submit();' %>
          Mostrar convocatorias cerradas
        </label>
      <% end %>
    </div>
    <div class="bm_col2">
        <%= link_to 'Crear Convocatoria', new_convocatoria_path, class: 'siac_button' %>
    </div>
  </div>
</div>

<div class='buttonera_index'>
 <%= link_to 'Administrar Dimensiones', componentes_path, class: 'siac_button' %>
</div>

<% content_for :header_tags do %>
	<%= stylesheet_link_tag 'siac.css', plugin: :utn_siac %>
  <%= javascript_include_tag 'funciones_siac', plugin: :utn_siac %>
<% end %>
