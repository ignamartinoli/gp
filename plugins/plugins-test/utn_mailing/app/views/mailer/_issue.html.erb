<br><br>
<table style="border-collapse: collapse; width: 100%; font-family: Arial, sans-serif; font-size: 14px;">
  <tr>
    <th style="padding: 8px; background-color: #f2f2f2; text-align: center;">Campo</th>
    <th style="padding: 8px; background-color: #f2f2f2; text-align: center;">Valor</th>
  </tr>

  <tr>
    <td style="padding: 8px;">Asunto</td>
    <td style="padding: 8px;"><%= h issue.subject %></td>
  </tr>

  <tr>
    <td style="padding: 8px;">Proyecto</td>
    <td style="padding: 8px;"><%= h issue.project.name %></td>
  </tr>

  <tr>
    <td style="padding: 8px;">Autor</td>
    <td style="padding: 8px;"><%= h issue.author %></td>
  </tr>

  <tr>
    <td style="padding: 8px;">Estado</td>
    <td style="padding: 8px;"><%= h issue.status.name %></td>
  </tr>

  <tr>
    <td style="padding: 8px;">Prioridad</td>
    <td style="padding: 8px;"><%= h issue.priority.name %></td>
  </tr>

  <% if issue.assigned_to.present? %>
    <tr>
      <td style="padding: 8px;">Asignado a</td>
      <td style="padding: 8px;"><%= h issue.assigned_to.name %></td>
    </tr>
  <% end %>

  <% if issue.due_date.present? %>
    <tr>
      <td style="padding: 8px;">Fecha límite</td>
      <td style="padding: 8px;"><%= format_date(issue.due_date) %></td>
    </tr>
  <% end %>

  <tr>
    <td style="padding: 8px;">Descripción</td>
    <td style="padding: 8px;"><%= h issue.description %></td>
  </tr>

  <% issue.custom_field_values.each do |cf| %>
    <% if cf.value.present? %>
      <tr>
        <td style="padding: 8px;"><%= h cf.custom_field.name %></td>
        <td style="padding: 8px;"><%= h cf.value %></td>
      </tr>
    <% end %>
  <% end %>
</table>
